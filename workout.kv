<WorkoutMainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.075

            Label:
                id: workout_stopwatch
                text: "0:00:00"
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                size_hint_x: 0.4

            Button:
                text: "B"
                on_press: root.back_button_action()
                size_hint_x: 0.1

            Button:
                text: "U"
                on_press: root.undo_button_action()
                size_hint_x: 0.1

            Button:
                text: "R"
                on_press: root.redo_button_action()
                size_hint_x: 0.1

            Button:
                text: "S"
                on_press: root.settings_button_action()
                size_hint_x: 0.1

        Widget:
            size_hint_y: 0.025

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.65
            padding: 10
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

            Label:
                text: "Main Menu"
                font_size: 24
                bold: True

            Label:
                text: "3 sets x 10 reps @ 60kg"
                font_size: 18

            Label:
                text: "Focus on form and tempo."
                font_size: 14

        Widget:
            size_hint_y: 0.025

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.125

            Button:
                text: "-"
                on_press: root.minus_button_action()
                size_hint_x: 0.15

            Button:
                text: "10"
                font_size: 36
                on_press: root.timer_button_action()
                size_hint_x: 0.7

            Button:
                text: "+"
                on_press: root.plus_button_action()
                size_hint_x: 0.15

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: 10

            Button:
                text: "Edit Workout"
                on_press: root.edit_workout_button_action()

            Button:
                text: "Main Menu"
                on_press: root.main_menu_button_action()
                background_color: (1, 0, 0, 1) if root.current_screen_name == "main" else (1, 1, 1, 1)
                color: (1, 1, 1, 1) if root.current_screen_name == "main" else (0, 0, 0, 1)

            Button:
                text: "Workout Data"
                on_press: root.workout_data_button_action()


